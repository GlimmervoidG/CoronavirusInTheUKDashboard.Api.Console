@using Microsoft.AspNetCore.Html
@using System.Globalization;
@using RazorLight
@using CoronavirusInTheUKDashboard.Api.Service.Templating;

@inherits TemplatePage<CoronavirusInTheUKDashboard.Api.Service.Models.Models.MainPostModel>


@if (true)
{
    <text>As of @Model.Title.TotalCases.Date.ToString("d MMMM", CultureInfo.CreateSpecificCulture("en-US")),</text>
}
@if (Model.Title.TotalCases.Value.HasValue)
{
    <text> @HelperFunctions.Format(Model.Title.TotalCases.Value) people have tested positive for COVID-19 in the UK,</text>
}
else
{
    <text> the number of people who have tested positive hasn't been updated yet,</text>
}
@if (Model.Title.TotalDeaths.Value.HasValue)
{
    <text> and @HelperFunctions.Format(Model.Title.TotalDeaths.Value) have died within 28 days of a positive test.</text>
}
else
{
    <text> and the number of people who have died hasn't been updated yet.</text>
}
@if (Model.Title.TotalVaccines.Value.HasValue)
{
    <text> As of yesterday, @HelperFunctions.Format(Model.Title.TotalVaccines.Value) have received a first dose of vaccine.</text>
}