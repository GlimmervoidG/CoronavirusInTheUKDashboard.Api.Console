@using Microsoft.AspNetCore.Html
@using System.Globalization;
@using RazorLight
@using CoronavirusInTheUKDashboard.Api.Service.Templating;

@inherits TemplatePage<CoronavirusInTheUKDashboard.Api.Service.Models.Models.MainPostModel>

These are the key daily statistics as reported on the gov.uk dashboard for @Model.TargetDate.ToString("d MMMM", CultureInfo.CreateSpecificCulture("en-US"))
 
||**Daily**|**Cumulative**|
:--|--:|--:|
@foreach (var item in Model.DailyResult.Records)
{
<text>|@item.Name | @HelperFunctions.Format(@item.Daily) | @HelperFunctions.Format(@item.Cumulative)|
</text>
}